<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDetail"
    tools:context=".view.SplashActivity">

    <ImageView
        android:id="@+id/imageView_splash_main_logo"
        android:layout_width="@dimen/match_constraint"
        android:layout_height="@dimen/match_constraint"
        android:layout_marginStart="@dimen/size_88"
        android:layout_marginTop="@dimen/size_188"
        android:layout_marginEnd="@dimen/size_88"
        android:importantForAccessibility="no"
        android:src="@drawable/ic_logo_git_black"
        app:layout_constraintDimensionRatio="152:172"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_splash_label"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_32"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:importantForAccessibility="no"
        android:text="@string/txt_from"
        android:textColor="@android:color/black"
        android:textSize="@dimen/font_size_16"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@+id/imageView_splash_footer_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView_splash_footer_logo"
        android:layout_width="@dimen/match_constraint"
        android:layout_height="@dimen/size_56"
        android:layout_marginBottom="@dimen/size_80"
        android:importantForAccessibility="no"
        android:src="@drawable/logo_picpay"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="104:20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/size_10"
        android:fontFamily="sans-serif"
        android:textColor="@android:color/black"
        android:importantForAccessibility="no"
        android:text="@string/txt_designed_by"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>